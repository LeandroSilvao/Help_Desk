        <TextBox x:Name="txbErros" HorizontalAlignment="Left" Height="23" Margin="23,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" Foreground="Red" BorderBrush="{x:Null}" Background="{x:Null}" SelectionBrush="{x:Null}" CaretBrush="{x:Null}" TextAlignment="Center" FontSize="10"/>
